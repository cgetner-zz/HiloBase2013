<%if session[:job_seeker].blank? and session[:employer].blank?%>
  <div class="login-box">

    <div class="login-box-text safari-lh" >
      <a href="javascript:void(0);" onclick="show_login('code',event);" class="stop-propogate">Career Code</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%=signin_link%>
    </div>
    <%= form_tag :url => ("/login/login"),:before=>"login_status.before_call()", :remote => true  do -%>
      <div class="login-div body-click-hide" style="display:none;" id="login-div">
        <div><img src="/assets/home_loginbox_up.png" id="loginbox-topimg" alt="img"/></div>
        <div class="login-div-container">
          <div class="login-div-content">
            <div class="jobcode-section">
              <div>
                                                                            Career Code:	<br/>
                <input type="text" name="job_code" class="login-input input-field-style"/>
              </div>

              <%if not session[:job_seeker]%>
                <div class="sign-in-msg">
                                                                                      Please Sign in to access the job details
                </div>
              <%end%>
            </div>

            <div class="signin-section">
              <%if not session[:job_seeker]%>
                <div>
                                                                                      Your Email:		<br/>
                  <input type="text" name="login_name" class="login-input input-field-style"/>
                </div>

                <div>
                                                                                      Password:	<br/>
                  <input type="password" name="login_pass" class="login-input input-field-style"/>
                </div>
              <%end%>
              <div >
                <div style="float:left;">
                  <input type="submit" value="Submit" class="button-style-shared buttton_65X23"/>
                </div>
                <%if not session[:job_seeker]%>
                  <div  style="float:left;margin:8px 0px 0px 12px;">
                    <a href="/job_seeker/new">Sign Up</a>
                  </div>
                <%end%>
                <div class="clear-height"></div>
              </div>

              <div >
                <a href="/forgot_pwd">Forgot Password</a>
              </div>

              <div id="loader-img" style="display:none;margin-left:130px;"><%=image_tag("login-loader.gif")%></div>
            </div>

          </div>
        </div>
        <div><img src="/assets/home_loginbox_bottom.png" alt="img"/></div>
      </div>
    <%end%>

  </div>
<%elsif session[:job_seeker]%>

  <div class="login-box">
    <div class="login-box-text safari-lh" >
      <a href="javascript:void(0);" onclick="show_login('code',event);" class="stop-propogate">Career Code</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%=signin_link%>
    </div>

    <form onsubmit="jobcodelogin_submit(); return false;">
      <div class="login-div body-click-hide" style="display:none;" id="login-div">
        <div><img src="/assets/home_loginbox_up.png" id="loginbox-topimg" alt="img"/></div>
        <div class="login-div-container">
          <div class="login-div-content">
            <div class="jobcode-section">
              <div>
                                                                          Career Code:	<br/>
                <input type="text" name="job_code" id="job_code_login" class="login-input input-field-style"/>
              </div>
            </div>

            <div class="signin-section">

              <div >
                <div style="float:left;">
                  <input type="submit" value="Submit" class="button-style-shared buttton_65X23"/>
                </div>

                <div class="clear"></div>
              </div>
              <div id="loader-img" style="display:none;margin-left:130px;"><%=image_tag("login-loader.gif")%></div>
            </div>

          </div>
        </div>
        <div><img src="/assets/home_loginbox_bottom.png" alt="img"/></div>
      </div>
    </form>

  </div>


<%elsif session[:employer]%>
  <div id="employer_account_pop" style="display:none;" >
    <div>
      <a href="/employer_account">Account</a>
    </div>
    <div class="height10"></div>
    <div>
      <a href="/login/logout">Sign Out</a>
    </div>
  </div>
  <script type="text/javascript">
    $(document).ready(function(){
      employer_signout_link();
    });
  </script>
<%end%>