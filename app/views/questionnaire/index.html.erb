  <!--container-shadow-box-->
  <div class="container-shadow-box">
    <!--dark-paper-container-->
    <div class="dark-paper-container">

      <!--page-heading-container-->
      <%if !@job_seeker_birkman_detail.blank? and @job_seeker_birkman_detail.test_complete%>
        <div>
          <%=render :partial=>"/panels/pairing_personality"%>
        </div>
      <%else%>
        <div id="question_set_box">
          <%if @test_step == 0 -%>

          <%elsif @test_step == BIRKMAN_STEP_CITIZENSHIP -%>
            <%= render :partial => "/questionnaire/panels/work_env" -%>
          <%elsif @test_step == BIRKMAN_STEP_WORKENV -%>
            <%= render :partial => "/questionnaire/panels/test_one" -%>
          <%elsif @test_step == BIRKMAN_STEP_TEST_ONE -%>
            <%= render :partial => "/questionnaire/panels/test_two" -%>
          <%elsif @test_step == BIRKMAN_STEP_TEST_TWO -%>
            <%= render :partial => "/questionnaire/panels/test_three" -%>
          <%elsif @test_step == BIRKMAN_STEP_TEST_THREE -%>
            <%=render :partial=>"/panels/pairing_personality"%>
          <%end -%>
        </div>
      <%end%>
      <!--/page-heading-container-->
    </div>
