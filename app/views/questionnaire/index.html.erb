<% content_for :page_title do -%>Career Seeker - Registration | <% end %>
<!-- Bikman Details Form -->
<% content_for :questionnaire  do %>
  <div id="form_details" class="white_content">
    <div class="popup-upper-block-questionnaire">
      <span class="popup-top">&nbsp;</span>
      <div class="popup-content">
        <div class="gradient-content" style="padding: 10px 20px 0 32px;">
          <div class="popup-header-container" style="width: 416px;">
            <label class="popup-heading"><%=t ("personality_questionnaire.birkman_pop_up.heading") %></label>
          </div>
          <!--left-content-->
          <%= form_tag('/questionnaire/verify_birkman_id', :remote => true, :id=>"verify_form") do %>
            <div class="left-content margin-T3px" >
              <ul class="berkman-login-list" id="birkman_form" style="display:none">
                <li>
                  <div class="customized-input active-input">
                    <div class="input-left">&nbsp;</div>
                    <input type="hidden" id="first_name_placeholder" value="First Name" />
                    <input type="text" maxlength="50" value="<%= @job_seeker.first_name.force_encoding('utf-8') %>" id="first_name" name="first_name" onkeyup="buttonActivation();checkKeyupForEnter(event);" onfocus="focus_element(this);" onblur="blur_element(this);" onkeydown="type_element(this);"/>
                    <div class="input-right">&nbsp;</div>
                  </div>

                </li>
                <li>
                  <div class="customized-input active-input">
                    <div class="input-left">&nbsp;</div>
                    <input type="hidden" id="last_name_placeholder" value="Last Name" />
                    <input type="text" maxlength="50" value="<%= @job_seeker.last_name.force_encoding('utf-8') %>" id="last_name" name="last_name" onkeyup="buttonActivation();checkKeyupForEnter(event);" onfocus="focus_element(this);" onblur="blur_element(this);" onkeydown="type_element(this);"/>
                    <div class="input-right">&nbsp;</div>
                  </div>
                </li>
                <li>
                  <div class="customized-input active-input">
                    <div class="input-left">&nbsp;</div>
                    <input type="hidden" id="email_placeholder" value="Email" />
