                </li>
                <li class="no">
                  <input type="checkbox" id="n" name="birkman_test_id" onclick="showNo()" class="styled no"/>
                  <label onclick="showNo();"><%=t ("personality_questionnaire.birkman_pop_up.no_option.lable") %></label>
                </li>
              </ul>

              <p style="display:none" style="display:none" id="text1_yes"><%=t ("personality_questionnaire.birkman_pop_up.yes_option.content") %> </p>
              <div class="button-container" style="display:none;" id="button1">
                <span id="loader-img" style="display:none;" class="rfloat"><%=image_tag("ajax-loader-login.gif", :alt => "Loading ...")%></span>
                <input type="button" value="" id="verify_button" class="verify-button-active" style="margin-top:7px;"/>
                <!--<input type="submit" value="" id="verify_button" disabled="disabled" class="verify-button" style="margin-top:7px;"/>-->
                <!--<a href="javascript:void(0)" style="background:url(../assets/btn-verify.png)" id="verify_button" ><span>Verify>></span></a>-->
                <!--<input type="image" src="images/btn-verify.png" />-->
                <a href="javascript:hideBirkmanPopup();showForgotBirkmanPopup();" title="Lost Birkman ID?" id="lostBirkmanId"><%=t ("personality_questionnaire.birkman_pop_up.yes_option.lost_link") %></a>
                <label id="forgotBirkmanId" style="clear: both; color: #000066; float: right; font-size: 12px; display: none;">
                  <%=t ("personality_questionnaire.birkman_pop_up.yes_option.lost_link") %>
                </label>
              </div>
              <p style="display:none" id="text3_no"><%=t ("personality_questionnaire.birkman_pop_up.no_option.contentR1") %></p>
              <p style="display:none" id="text4_no"><%=t ("personality_questionnaire.birkman_pop_up.no_option.contentR2") %> <span class="brkman-popup-bld"><%=t ("personality_questionnaire.birkman_pop_up.no_option.contentR3") %></span></p>
            </div>
            <!--/right-content-->
          <% end %>
          <div class="button-container retake" style="display:none;width:421px;" id="button2">
            <input id="button-container-retake" type="button" class="next-button-active" onclick="hideBirkmanPopup();showIntroductaryPopup();" />
          </div>

        </div>

      </div>
      <span class="popup-bottom">&nbsp;</span>
    </div>
  </div>

  <!-- Set 1 popup -->
