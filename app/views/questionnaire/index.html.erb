          <br />
          <h3 class="idel-work"><%=t ("personality_questionnaire.set1.pop_up.heading2") %></h3>
          <!--<p class="forget-text">-->
          <p class="begin-text">
            <%=t ("personality_questionnaire.set1.pop_up.content") %>
          </p>
          <div class="begin-buttons">
            <input type="button" id="setOnePopup_button" class="begin-button-active rfloat" onclick="hideIntroductaryPopup();" />
          </div>
        </div>
        <!--<a href="javascript:void(0)" class="close" onClick="hideVerifySuccess();">Close</a>-->
