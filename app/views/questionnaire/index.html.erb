                    <div class="input-right">&nbsp;</div>
                  </div>
                </li>
                <li>
                  <% if session[:pass_through]!=true and session[:pass_through]!=false and !session[:pass_through].blank? %>
                    <div class="customized-input active-input">
                    <% else %>
                      <div class="customized-input input-text">
                      <% end %>
                      <div class="input-left">&nbsp;</div>
                      <input type="hidden" id="birkman_id_placeholder" value="<%=t ("personality_questionnaire.birkman_pop_up.yes_option.birkman_id") %>" />
                      <% if session[:pass_through]!=true and session[:pass_through]!=false and !session[:pass_through].blank? %>
                        <input type="text" value="<%=session[:pass_through]%>" id="birkman_id" name="birkman_id" onkeyup="buttonActivation();checkKeyupForEnter(event);" onfocus="focus_element(this);" onblur="blur_element(this);" onkeydown="type_element(this);"/>
                      <% else %>
                        <input type="text" value="<%=t ("personality_questionnaire.birkman_pop_up.yes_option.birkman_id") %>" id="birkman_id" name="birkman_id" onkeyup="buttonActivation();checkKeyupForEnter(event);" onfocus="focus_element(this);" onblur="blur_element(this);" onkeydown="type_element(this);"/>
                      <% end %>

                      <div class="input-right">&nbsp;</div>
                    </div>
                </li>
              </ul>

              <p style="display:none;" id="birkman_logo"><%= image_tag("Powered_by_Birkman.png") %></p>
              <p style="display:none;" id="text1_no"><%=t ("personality_questionnaire.birkman_pop_up.no_option.contentL1") %></p>

              <ul style="display:none;" id="text2_no" class="birkman-no-retake">
                <li><%=t ("personality_questionnaire.birkman_pop_up.no_option.contentL2") %> <span class="brkman-popup-bld"><%=t ("personality_questionnaire.birkman_pop_up.no_option.contentL3") %></span></li>
                <li><%=t ("personality_questionnaire.birkman_pop_up.no_option.contentL4") %> <br /><span class="brkman-popup-bld"><%=t ("personality_questionnaire.birkman_pop_up.no_option.contentL5") %></span></li>
