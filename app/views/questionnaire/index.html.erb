  <!-- Set 3 popup -->
  <div id="setThreePopup" class="white_content" >
    <div class="popup-upper-block-questionnaire">
      <span class="popup-top">&nbsp;</span>
      <div class="popup-content">
        <div class="gradient-content">
          <div class="popup-header-container">
            <label class="popup-heading" style="width: 444px;">
              <%=t ("personality_questionnaire.heading1") %> <span class="personality-section-heading" style="width: 110px;"><%=t ("personality_questionnaire.set3.pop_up.heading1") %></span>
            </label>
          </div>
          <br />
          <h3 class="idel-work"><%=t ("personality_questionnaire.set3.pop_up.heading2") %></h3>
          <!--<p class="forget-text">-->
          <p class="begin-text width-256px">
            <%=t ("personality_questionnaire.set3.pop_up.contentL1") %>
