<div>
  <%for t in testimonials
    row_css = cycle("","view-alt-testimonial")
  %>
    <div class="view-testimonial-row">
      <div class="view-testimonial-content <%=row_css%>">
        <div class="text">
          "<%=h(t.description).html_safe.force_encoding("UTF-8") -%>"
        </div>
        <div class="by">
          <%=h(t.name) -%>, <%=h(t.position) -%>
        </div>
      </div>
    </div>
  <%end%>
</div>