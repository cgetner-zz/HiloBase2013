<div class="ques-outer-box">
	<%=render :partial=>"/panels/layer_top_800"-%>
	<%=render :partial=>"/panels/midsize_header_close"%>
	<div class="ques-inner-box">
		<%= form_tag :url => ("/ajax/save_role_question"),:html=>{:id=>"role_form"}, :remote => true do -%>
			<div class="ques-content">
				<div>
					<div class="role-ques-label">To what extent does this <%=@job.name%>, involve...</div>
					<br class="clear"/>
					<%=hidden_field_tag :job_id,params[:job_id]%>
					<%=hidden_field_tag :slider_values,@job_role_ques.join(",")%>
				</div>
				
				<div class="role-header">
					<div class="role-ques-col-header">
						&nbsp;
					</div>

					<div class="role-radio-col-0" >
						None
					</div>

					<div class="role-radio-col-1" >
						Slightly
					</div>

					<div class="role-radio-col-2" >
						Moderately
					</div>

					<div class="role-radio-col-3" >
						Greatly
					</div>

					<div class="role-radio-col-4" >
						Almost Always
					</div>
					<br class="clear"/>
				</div>
				
				<%for ques in @role_questions%>
					
					<div class="role-row ">
						<div class="role-ques-col">
							<%=h(ques.question)%>
						</div>
					
						<div class="role-radio-slider">
							<%0.upto(4){|i| -%>
								<div class="role-radio-col-<%=i%>" >
								<a href="javascript:void(0);" onclick="pos_profile_role_ques.check_role_img(this);" data-val="<%=i%>"><img src="/assets/hollow_workenv_img.png"/></a>
								</div>
							<%} -%>
							<br class="clear"/>
						</div>
					

						<br class="clear"/>
					</div>

				<%end%>
				
				<div>
                                                  <img alt="" src="/assets/powered_by_birkman.jpg"/>
				</div>
				<div class="ques-submit">
                                                  <img alt="" src="/assets/login-loader.gif" id="question_loader" style="display:none;" />&nbsp;
                                                  <input type="button" class="button-style-shared buttton_190X23" value="Determine Role Environment" onclick="return pos_profile_role_ques.save();" />
				</div>
				<br class="clear"/>
			</div>
		<%end-%>
	</div>
	<%=render :partial=>"/panels/layer_bottom_800"-%>
</div>
<script type="text/javascript">
	//role_ques_slider.create();
	//role_ques_slider.onload();
	pos_profile_role_ques.onload();
</script>