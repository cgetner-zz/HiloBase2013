<div class="work-env-blue-box">
  <div class="work-env-blue-box-top">&nbsp;</div>
  <div class="work-env-blue-box-content">
  	<h1 class="role-ques-label">Desired Education Level</h1>
	<div class="degree-box-container">
		<%for degree in @degrees%>
			<div class="degree-box">
				<a href="javascript:void(0);" onclick="select_highest_education(<%=degree.id%>);" id="degree_link_<%=degree.id%>" class="<%=@selected_degree_ids.include?(degree.id) ? "degree-tab-selected" : "degree-tab"%>"><%=h(degree.name) -%></a>
			</div>
		<%end%>
	</div>
  </div>
  <div class="work-env-blue-box-bottom">&nbsp;</div>
</div>

<!-- work experience -->
<div class="intro-right-content margin-B-20px">
  <div class="myintro-content" style="padding-bottom:0">
	<div class="myintro-section-content">
		
		<h1 class="role-ques-label">Desired Level Work Experience</h1>
		<div class="exp-box-container">
			<div class="exp-box1">
			  <a href="javascript:void(0);" onclick="select_work_experience(0);" id="exp_link_0" class="<%=@selected_work_exp == 0 ? "anyWorkExpBtn_enabled" : "anyWorkExpBtn"%>">Any</a>
			</div>
			<% for i in 1..10 %>
				<div class="exp-box">
					<a href="javascript:void(0);" onclick="select_work_experience(<%= i %>);" id="exp_link_<%= i %>" class="<%=@selected_work_exp == i ? "WorkExpBtn_blue" : "WorkExpBtn_disabled"%>">
					  <% if i == 10 %>
						<%= i %>+
					  <%else%>
						<%= i %>
					  <%end%>
					</a>
				</div>
			<%end%>	
		</div>
    </div>
  </div>
  <div class="myintro-content-bottom">&nbsp;</div>
</div>

