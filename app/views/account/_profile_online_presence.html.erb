              <input tabindex="7" maxlength="20" type="text" value="<% if @job_seeker.website_title_two.nil? %><%= t('account.pairing_profile.intro.online_presence.website_title') %><%else%><%=@job_seeker.website_title_two.force_encoding 'utf-8'%><% end %>" id="website_title_2" name="website_title_2" onfocus="validateForSaveIntro(this);focus_element(this);" onblur="validateForSaveIntro(this);blur_element(this);" onkeydown="type_element(this);" onkeyup="activateSave();" />
