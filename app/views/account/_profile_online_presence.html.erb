            </div>
          </li>
        </ul>
      <% end %>
      <div class="online-presence-content"><%= t('account.pairing_profile.intro.online_presence.content') %></div>

    </div>
  </div>
  <div class="bottom-bar"></div>
</div>

<script type="text/javascript">

  jQuery(function($) {
    // create a convenient toggleLoading function
    var loading_edit_website = function(){
      $('#submit-button-intro').hide();
      $('#submit-loader-img').show();
    }
    var loaded_edit_website = function(){
      $('#submit-loader-img').hide();
      $('#submit-button-intro').show();
      disableSaveButton();
      hideBlockShadow();
    }

    $("#edit_website")
    .bind("ajax:beforeSend", loading_edit_website)
    .bind("ajax:complete", loaded_edit_website)

  });
</script>