              <input tabindex="6" maxlength="250" type="text" value="<% if @job_seeker.website_two.nil? %><%= t('account.pairing_profile.intro.online_presence.website_text') %><%else%><%=@job_seeker.website_two.force_encoding 'utf-8'%><% end %>" id="website_2" name="website_2" onfocus="validateForSaveIntro(this);focus_element(this);" onblur="validateForSaveIntro(this);blur_element(this);" onkeydown="type_element(this);" onkeyup="activateSave();" />
