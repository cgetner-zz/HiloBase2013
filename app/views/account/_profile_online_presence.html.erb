<div class="online-presence-cell">
  <div class="upper-bar">&nbsp;</div>
  <div class="block-content">
    <div class="gradient-content">
      <label class="block-heading online-presence-heading"><%= t('account.pairing_profile.intro.online_presence.heading') %></label>
      <input type="hidden" value="" id="error_id_website" />
      <label class="error_msg" id="error_msg_website"></label>
      <%= form_tag("/my_introduction/save_online_presence", :id=>"edit_website", :remote => true) do -%>
        <input name="website_placeholder" type="hidden" value="<%= t('account.pairing_profile.intro.online_presence.website_text') %>"  />
        <input name="website_title_placeholder" type="hidden" value="<%= t('account.pairing_profile.intro.online_presence.website_title') %>"  />
