			<div class="fit-value">Best</div>
			<div class="clear-height"></div>
		</div>
		<div class="height5"></div>
		
		<div>
			Career Code: <b><%=h(job.code) -%></b>
		</div>

		<div>
			Expires in: <%=format_remaining_time(job.expire_at)%>
		</div>
		<div class="height5"></div>
</div>

