<div class="dc-job-info">
					
	<div class="dc-job-name-font">
		<%=h(job.name) -%>
	</div>
	<div class="height5"></div>

	<div class="dc-comp-name-font">
		 <%=h(job.company.name) -%>
	</div>
	<div class="height5"></div>
	
	<div>
			Type: <b><%=h(desired_emp) -%></b>
	</div>
	

	<div>
		Compensation: <b><%=compensation_range_by_value(job.minimum_compensation_amount)%></b>
	</div>
	
	
	<div class="height5"></div>
</div>

