          <li class="disable"><a href="javascript:void(0);" title="Pairing Profile"><%=t ("cs_registration.header.pairing") %> <br /><%=t ("cs_registration.header.profile") %></a></li>
          <li class="lastChild active"><a href="javascript:void(0);" title="Site Activation"><%=t ("cs_registration.header.site") %> <br /><%=t ("cs_registration.header.activation") %></a></li>
        </ul>
      </div>
      <!--/page-navigation-->
    </div>
  <%end%>
  <!--/header-right-container-->
</div>